@model AppUser
@{
    ViewData["Title"] = "ChangeStatus";
}
<div class="row">
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">@Model.FullName</h4>

            <p>@Model.Email</p>
            <p>@Model.UserName</p>

           </div>
      </div>
  </div>
</div>

<div class="row mt-3">
    <a asp-action="Index" class="btn btn-dark mr-5">Go back</a>
    <form method="post">
        @if (!Model.IsDeleted)
        {
            <button type="submit" class="btn btn-danger">Deactivate</button>
        }
        else
        {
            <button type="submit" class="btn btn-success">Activate</button>
        }
    </form>


        </div>
   

